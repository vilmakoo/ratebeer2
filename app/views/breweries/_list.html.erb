<% cache "brewerylist-#{@order}", skip_digest: true do %>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>
          <% if session[:order] != 'name' %>
              <%= link_to 'Name', breweries_path(order: "name") %>
          <% else %>
              <%= link_to 'Name', breweries_path(order: "-name") %>
          <% end %>
        </th>
        <th>
          <% if session[:order] != 'year' %>
              <%= link_to 'Year', breweries_path(order: "year") %>
          <% else %>
              <%= link_to 'Year', breweries_path(order: "-year") %>
          <% end %>
        </th>
      </tr>
      </thead>

      <tbody>
      <% breweries.each do |brewery| %>
          <tr>
            <td><%= link_to brewery.name, brewery %></td>
            <td><%= brewery.year %></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>

<% end %>